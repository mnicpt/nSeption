		<div class="counter">
			<span class="count">0</span>
		</div>
	</div>

	<script type="text/javascript">
		$(document).on('mousemove', '.indicator', function(e) {
			if(e.which) {
				var pageCoords = "( " + e.pageX + ", " + e.pageY + " )";
				var clientCoords = "( " + e.clientX + ", " + e.clientY + " )";
				$("span:first").text("( e.pageX, e.pageY ) : " + pageCoords);
	
				$this = $(this);
				var width = $this.width();
				var mouseStartX = e.pageX;
				var $indicator, $counter, $count, mouseChange, percentageChange;
	
				$indicator = $('.indicator');
				$counter = $('.counter');
				$count = $('.count');
	
				mouseChange = e.pageX - mouseStartX;
				if (mouseChange < 0) {
					$indicator.css({
						marginLeft : '0'
					});
					$counter.css({
						marginLeft : '0'
					});
					$count.val('0');
				} else {
					percentChange = (mouseChange / width * 100) + "%";
					alert(percentChange);
					$indicator.css({
						marginLeft : percentChange
					});
					$counter.css({
						marginLeft : percentChange
					});
					$count.val(mouseChange);
				}
			}
		});
	</script>
